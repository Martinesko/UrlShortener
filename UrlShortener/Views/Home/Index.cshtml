@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
@{
    ViewData["Title"] = "URL Shortener";
}

<div class="container mt-5">
    <h1 class="mb-4 text-center">URL Shortener</h1>
    <form asp-action="Shorten" method="post" class="mb-4">
        <div class="input-group">
            <input type="url" name="originalUrl" class="form-control" placeholder="Enter your long URL here" required />
            <button type="submit" class="btn btn-primary">Shorten</button>
        </div>
    </form>

    @if (ViewBag.ShortUrl != null)
    {
        <div class="alert alert-success text-center">
            Shortened URL: <a href="@ViewBag.ShortUrl" target="_blank">@ViewBag.ShortUrl</a>
        </div>
    }
    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger text-center">
            @ViewBag.Error
        </div>
    }
</div>
